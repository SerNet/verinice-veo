{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeAll",
    ":automergePr"
  ],
  "reviewers": [
    "jj",
    "jk",
    "uz"
  ],
  "assignAutomerge": true,
  "ignoreDeps": [
    "postgres"
  ],
  "packageRules": [
    {
      "groupName": "Spotless",
      "postUpgradeTasks": {
        "commands": [
          "./gradlew spotlessApply"
        ],
        "fileFilters": [
          "**/*"
        ]
      },
      "matchPackageNames": [
        "/^com.diffplug.spotless/"
      ]
    },
    {
      "groupName": "Springdoc",
      "matchPackageNames": [
        "/^org.springdoc:/"
      ]
    },
    {
      "groupName": "JSON Schema Generator",
      "matchPackageNames": [
        "/^com.github.victools:jsonschema/"
      ]
    },
    {
      "groupName": "Swagger",
      "matchPackageNames": [
        "/^io.swagger.core.v3:/"
      ]
    },
    {
      "groupName": "JWT",
      "matchPackageNames": [
        "/^io.jsonwebtoken:/"
      ]
    },
    {
      "matchPackageNames": [
        "eclipse-temurin"
      ],
      "allowedVersions": "25-jdk"
    }
  ]
}
