{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "reviewers": [
    "ak",
    "jj",
    "jk"
  ],
  "automerge": true,
  "automergeType": "pr",
  "assignAutomerge": true,
  "postUpgradeTasks": {
    "commands": [
      "./gradlew generateLicenseReport"
    ],
    "fileFilters": [
      "LICENSE-3RD-PARTY.txt"
    ],
    "executionMode": "update"
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^com.diffplug.spotless"
      ],
      "groupName": "Spotless",
      "allowedVersions": "!/6\\.1[789]\\.0/",
      "postUpgradeTasks": {
        "commands": [
          "./gradlew spotlessApply"
        ],
        "fileFilters": [
          "**/*"
        ]
      }
    },
    {
      "matchPackagePatterns": [
        "^com.diffplug.spotless:spotless-lib-extra"
      ],
      "allowedVersions": "!/(2\\.3[789]\\.0)/"
    },
    {
      "matchPackagePatterns": [
        "^org.spockframework:"
      ],
      "groupName": "Spock"
    },
    {
      "matchPackagePatterns": [
        "^org.springdoc:"
      ],
      "groupName": "Springdoc"
    },
    {
      "matchPackagePatterns": [
        "^org.testcontainers:"
      ],
      "groupName": "Testcontainers"
    },
    {
      "matchPackagePatterns": [
        "^com.github.victools:jsonschema"
      ],
      "groupName": "JSON Schema Generator"
    },
    {
      "matchPackagePatterns": [
        "^io.swagger.core.v3:"
      ],
      "groupName": "Swagger"
    },
    {
      "matchPackagePatterns": [
        "^io.jsonwebtoken:"
      ],
      "groupName": "JWT"
    },
    {
      "matchPackagePatterns": [
        "^org.spockframework:",
        "^com.github.jk1.dependency-license-report$",
        "^com.github.spotbugs$",
        "org.testcontainers:",
        "^io.freefair.lombok",
        "^gradle$",
        "^org.keycloak:keycloak-authz-client$",
        "^com.networknt:json-schema-validator"
      ],
      "postUpgradeTasks": {}
    }
  ]
}
