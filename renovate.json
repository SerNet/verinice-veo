{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "reviewers": [
    "ak",
    "jj"
  ],
  "automerge": true,
  "automergeType": "pr",
  "assignAutomerge": true,
  "ignoreDeps": [
    "postgres"
  ],
  "packageRules": [
    {
      "groupName": "Spotless",
      "allowedVersions": "!/6\\.1[789]\\.0/",
      "postUpgradeTasks": {
        "commands": [
          "./gradlew spotlessApply"
        ],
        "fileFilters": [
          "**/*"
        ]
      },
      "matchPackageNames": [
        "/^com.diffplug.spotless/"
      ]
    },
    {
      "allowedVersions": "!/(2\\.3[789]\\.0)/",
      "matchPackageNames": [
        "/^com.diffplug.spotless:spotless-lib-extra/"
      ]
    },
    {
      "groupName": "Spock",
      "matchPackageNames": [
        "/^org.spockframework:/"
      ]
    },
    {
      "groupName": "Springdoc",
      "matchPackageNames": [
        "/^org.springdoc:/"
      ]
    },
    {
      "groupName": "Testcontainers",
      "matchPackageNames": [
        "/^org.testcontainers:/"
      ]
    },
    {
      "groupName": "JSON Schema Generator",
      "matchPackageNames": [
        "/^com.github.victools:jsonschema/"
      ]
    },
    {
      "groupName": "Swagger",
      "matchPackageNames": [
        "/^io.swagger.core.v3:/"
      ]
    },
    {
      "groupName": "JWT",
      "matchPackageNames": [
        "/^io.jsonwebtoken:/"
      ]
    }
  ]
}
